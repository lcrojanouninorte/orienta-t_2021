{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "core-js/es/reflect": [
        "../node_modules/core-js/proposals/reflect-metadata"
      ],
      "core-js/es/*": ["../node_modules/core-js/es"],
      "@core/*": [
        "app/@core/*"
      ],
      "@app/*": [
        "app/@core/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@env": [
        "environments/environment"
      ],
      "@modules/*": [
        "app/pages/*"
      ],
      "@data/*": [
        "app/@core/data/*"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      { "name": "tslint-language-service"}
    ]
  }
}
